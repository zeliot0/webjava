{% extends 'layout/base.html.twig' %}

{% block title %}Ajouter Package{% endblock %}

{% block body %}

<div class="form-container">

  <div class="page-header">
    <div>
      <h1 class="page-title">Ajouter Package</h1>
      <p class="desc">Cr√©er une nouvelle offre</p>
    </div>

    <a href="{{ path('app_package_index') }}" class="btn">
      <i class="fa-solid fa-arrow-left"></i>
      Retour
    </a>
  </div>

  {{ form_start(form) }}

  <div class="form-row">

    <div>
      {{ form_label(form.nom) }}
      {{ form_widget(form.nom) }}
      {{ form_errors(form.nom) }}
    </div>
  </div>

  <div>
    {{ form_label(form.description) }}
    {{ form_widget(form.description) }}
    {{ form_errors(form.description) }}
  </div>

  <div class="form-row">
    <div>
      {{ form_label(form.prix) }}
      {{ form_widget(form.prix) }}
      {{ form_errors(form.prix) }}
    </div>

    <div>
      {{ form_label(form.devise) }}
      {{ form_widget(form.devise) }}
      {{ form_errors(form.devise) }}
    </div>
  </div>

  <div class="form-row">
    <div>
      {{ form_label(form.duree) }}
      {{ form_widget(form.duree) }}
      {{ form_errors(form.duree) }}
    </div>

    <div>
      {{ form_label(form.uniteDuree) }}
      {{ form_widget(form.uniteDuree) }}
      {{ form_errors(form.uniteDuree) }}
    </div>
  </div>

  <div class="form-row">
    <div>
      {{ form_label(form.type) }}
      {{ form_widget(form.type) }}
      {{ form_errors(form.type) }}
    </div>

    <div class="checkbox-field">
      {{ form_row(form.statut) }}
      {{ form_row(form.essaiGratuit) }}
    </div>
  </div>

  <button type="submit" class="btn primary big">
    <i class="fa-solid fa-check"></i>
    Enregistrer
  </button>

  {{ form_end(form) }}

</div>

{% endblock %}
